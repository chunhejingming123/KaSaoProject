<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/sns_item_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_40"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.kasao.qintai.widget.CircleImageView
            android:id="@+id/sns_item_picture"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dimen_8"
            tools:src="@drawable/bg_default" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/sns_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/text_14"
                tools:text="SomeBccccccody" />

            <TextView
                android:id="@+id/sns_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sns_item_name"
                android:layout_marginTop="@dimen/dimen_3"
                android:maxLines="1"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/text_11"
                tools:text="ssssccccccc" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dimen_3"
            android:src="@drawable/svg_drawable_3dot" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sns_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10"
            android:maxLines="4"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_13" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/sns_item_gridView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_marginTop="@dimen/dimen_8"
        android:background="@color/color_f5f5f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/dimen_8"
        android:layout_marginTop="@dimen/dimen_8"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/sns_item_praise"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:background="@drawable/select_item"
                android:drawableLeft="@drawable/icon_thumb_normal"
                android:drawablePadding="@dimen/dimen_7"
                android:gravity="center"
                android:text="赞"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dimen_14" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/sns_item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/icon_talk"
                android:drawablePadding="@dimen/dimen_7"
                android:gravity="center"
                android:text="评论"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dimen_14" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/liulangcishu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/liulang"
                android:drawablePadding="@dimen/dimen_7"
                android:gravity="center"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dimen_14"
                tools:text="11" />
        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10"
        android:background="@color/color_f5f5f5" />


</LinearLayout>