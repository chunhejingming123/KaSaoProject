<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f7f7f7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_49"
            android:background="@color/white">

            <FrameLayout
                android:id="@+id/viewBack"
                android:layout_width="@dimen/dimen_49"
                android:layout_height="@dimen/dimen_49">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:background="@drawable/icon_return_black" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/online_buy"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_18" />
        </FrameLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:isScrollContainer="false"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_marginRight="@dimen/dimen_15"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@drawable/shape_bg_white"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingBottom="@dimen/dimen_15"
                    android:paddingLeft="@dimen/dimen_15"
                    android:paddingRight="@dimen/dimen_20"
                    android:paddingTop="@dimen/dimen_15">

                    <TextView
                        android:id="@+id/tv01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/three_step_buy"
                        android:textColor="@color/color_333333"

                        android:textSize="@dimen/dimen_15"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv01"
                        android:layout_marginTop="@dimen/dimen_12"
                        android:lineSpacingMultiplier="1.2"
                        android:text="@string/buy_carstep"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dimen_14" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/savemoney" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:layout_marginRight="@dimen/dimen_15"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@drawable/shape_bg_white"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_ee2e3b"
                        android:textSize="@dimen/dimen_20"
                        android:visibility="gone"
                        tools:text="20.4万" />

                    <TextView
                        android:id="@+id/tvDes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_8"
                        tools:text="xxx"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dimen_14" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0.5"
                        android:layout_marginBottom="@dimen/dimen_12"
                        android:layout_marginTop="@dimen/dimen_12"
                        android:background="@color/color_f7f7f7" />

                    <TextView
                        android:id="@+id/tvOrderNum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/dimen_14"
                        tools:text="已有153人预订" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_12"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/dimen_15">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dimen_80"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/buy_carway"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/dimen_15"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvLoae"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/bg_border2_fbe0e2"
                            android:gravity="center_vertical"
                            android:paddingBottom="@dimen/dimen_5"
                            android:paddingLeft="@dimen/dimen_10"
                            android:paddingRight="@dimen/dimen_10"
                            android:paddingTop="@dimen/dimen_5"
                            android:text="@string/newcar_loae"
                            android:textColor="@color/color_5c5c5c"
                            android:textSize="@dimen/dimen_15" />

                        <TextView
                            android:id="@+id/tvPay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:background="@drawable/bg_border6_dedede"
                            android:gravity="center_vertical"
                            android:paddingBottom="@dimen/dimen_5"
                            android:paddingLeft="@dimen/dimen_10"
                            android:paddingRight="@dimen/dimen_10"
                            android:paddingTop="@dimen/dimen_5"
                            android:text="@string/newcar_pay"
                            android:textColor="@color/color_5c5c5c"
                            android:textSize="@dimen/dimen_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="@dimen/dimen_80"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/buy_carnum"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/dimen_15"
                            android:textStyle="bold" />

                        <FrameLayout
                            android:layout_width="@dimen/dimen_130"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/bg_border6_dedede">

                            <TextView
                                android:id="@+id/tvMinus"
                                android:layout_width="@dimen/dimen_35"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|left"
                                android:background="@drawable/bg_border6_dedede"
                                android:gravity="center"
                                android:paddingBottom="@dimen/dimen_5"
                                android:paddingLeft="@dimen/dimen_10"
                                android:paddingRight="@dimen/dimen_10"
                                android:paddingTop="@dimen/dimen_5"
                                android:text="-"
                                android:textColor="@color/color_5c5c5c"
                                android:textSize="@dimen/dimen_18" />

                            <TextView
                                android:id="@+id/tvNum"
                                android:layout_width="@dimen/dimen_60"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingBottom="@dimen/dimen_5"
                                android:paddingLeft="@dimen/dimen_10"
                                android:paddingRight="@dimen/dimen_10"
                                android:paddingTop="@dimen/dimen_5"
                                android:text="1"
                                android:textColor="@color/color_5c5c5c"
                                android:textSize="@dimen/dimen_15" />

                            <TextView
                                android:id="@+id/tvPlug"
                                android:layout_width="@dimen/dimen_35"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical|right"
                                android:background="@drawable/bg_border6_dedede"
                                android:gravity="center"
                                android:paddingBottom="@dimen/dimen_5"
                                android:paddingLeft="@dimen/dimen_10"
                                android:paddingRight="@dimen/dimen_10"
                                android:paddingTop="@dimen/dimen_5"
                                android:text="+"
                                android:textColor="@color/color_5c5c5c"
                                android:textSize="@dimen/dimen_18" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dimen_80"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/buy_cartime"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/dimen_15"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvSeventDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/bg_border6_dedede"
                            android:gravity="center_vertical"
                            android:paddingBottom="@dimen/dimen_5"
                            android:paddingLeft="@dimen/dimen_10"
                            android:paddingRight="@dimen/dimen_10"
                            android:paddingTop="@dimen/dimen_5"
                            android:text="@string/sevenday"
                            android:textColor="@color/color_5c5c5c"
                            android:textSize="@dimen/dimen_15" />

                        <TextView
                            android:id="@+id/tvOneMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_8"
                            android:background="@drawable/bg_border6_dedede"
                            android:gravity="center_vertical"
                            android:paddingBottom="@dimen/dimen_5"
                            android:paddingLeft="@dimen/dimen_10"
                            android:paddingRight="@dimen/dimen_10"
                            android:paddingTop="@dimen/dimen_5"
                            android:text="@string/onemonth"
                            android:textColor="@color/color_5c5c5c"
                            android:textSize="@dimen/dimen_15" />

                        <TextView
                            android:id="@+id/tvThreeMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_8"
                            android:background="@drawable/bg_border6_dedede"
                            android:gravity="center_vertical"
                            android:paddingBottom="@dimen/dimen_5"
                            android:paddingLeft="@dimen/dimen_10"
                            android:paddingRight="@dimen/dimen_10"
                            android:paddingTop="@dimen/dimen_5"
                            android:text="@string/threemonth"
                            android:textColor="@color/color_5c5c5c"
                            android:textSize="@dimen/dimen_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dimen_80"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/userName"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/dimen_15"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/input_name"
                            android:lines="1"
                            android:paddingBottom="@dimen/dimen_3"
                            android:paddingTop="@dimen/dimen_3"
                            android:singleLine="true"
                            android:textColor="@color/color_5c5c5c"
                            android:textColorHint="@color/color_cc666666"
                            android:textSize="@dimen/dimen_15" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/dimen_80"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="@string/telnum"
                            android:textColor="@color/color_333333"
                            android:textSize="@dimen/dimen_15"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/etPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/input_moble"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="11"
                            android:paddingBottom="@dimen/dimen_3"
                            android:paddingTop="@dimen/dimen_3"
                            android:singleLine="true"
                            android:textColor="@color/color_5c5c5c"
                            android:textColorHint="@color/color_cc666666"
                            android:textSize="@dimen/dimen_15" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_80"
                    android:background="@color/color_f7f7f7" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/color_f7f7f7"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_1">

        <FrameLayout
            android:id="@+id/viewBuy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="3"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen_12"
                android:drawableLeft="@drawable/icon_online_order"
                android:drawablePadding="@dimen/dimen_10"
                android:gravity="center"
                android:text="@string/submit_preorder"
                android:textColor="@color/color_353533"
                android:textSize="@dimen/dimen_18" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/viewCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="2.0"
            android:background="@color/color_f23644">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen_12"
                android:drawableLeft="@drawable/icon_big_call"
                android:drawablePadding="@dimen/dimen_10"
                android:gravity="center"
                android:text="@string/tel_link"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18" />
        </FrameLayout>

    </LinearLayout>


</FrameLayout>
