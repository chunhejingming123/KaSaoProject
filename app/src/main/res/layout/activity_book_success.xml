<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f7f7f7"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_49"
        android:background="@color/white">

        <FrameLayout
            android:id="@+id/viewBack"
            android:layout_width="@dimen/dimen_49"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_15"
                android:background="@drawable/icon_return_black" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/title_booksussful"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_18" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_25"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/icon_book_sucess" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_15"
            android:text="@string/title_booksussful"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_15"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/tip_booksucess"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/dimen_14" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_weight="1.0"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_22"
                android:background="@drawable/car_coupon">

                <TextView
                    android:id="@+id/tvCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_49"
                    android:layout_marginTop="@dimen/dimen_26"
                    android:lines="1"
                    android:textColor="@color/color_ff2a49"
                    android:textSize="@dimen/dimen_20"
                    tools:text="eeeeeeeeee" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_25"
                android:text="@string/coupon_use_way"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dimen_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/tip_coupon_use"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/dimen_14" />
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/color_f7f7f7"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dimen_1">

        <FrameLayout
            android:id="@+id/viewShop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="3"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen_12"
                android:drawableLeft="@drawable/icon_shop"
                android:drawablePadding="@dimen/dimen_10"
                android:gravity="center"
                android:text="@string/shop"
                android:textColor="@color/color_353533"
                android:textSize="@dimen/dimen_18" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/viewCall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="2.0"
            android:background="@color/color_f23644">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dimen_12"
                android:drawableLeft="@drawable/icon_big_call"
                android:drawablePadding="@dimen/dimen_10"
                android:gravity="center"
                android:text="@string/tel_link"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>