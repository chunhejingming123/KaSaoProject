<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_15"
    android:layout_marginRight="@dimen/dimen_15"
    android:layout_marginTop="@dimen/dimen_8"
    android:background="@drawable/border6_white_fill_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_15"
    android:paddingLeft="@dimen/dimen_15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15">

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/color_ee2e3b"
            android:textSize="@dimen/dimen_20"
            tools:text="20.4ä¸‡" />

        <TextView
            android:id="@+id/unite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_2"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_toRightOf="@+id/tvPrice"
            android:gravity="bottom"
            android:text="RMB"
            android:textColor="@color/color_ff9c9c"
            android:textSize="@dimen/dimen_12" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_20"
            android:layout_toRightOf="@+id/unite"
            android:gravity="center_vertical"
            android:text="@string/num"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_15" />

        <TextView
            android:id="@+id/tvNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_toRightOf="@+id/num"
            android:text="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_15" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_5"
        android:maxLines="2"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dimen_16"
        tools:text="sssssssssssss" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0.5"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/color_f7f7f7" />

    <FrameLayout
        android:id="@+id/viewBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@drawable/car_coupon">

        <TextView
            android:id="@+id/tvNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_49"
            android:layout_marginTop="@dimen/dimen_26"
            android:lines="1"
            android:textColor="@color/color_ff2a49"
            android:textSize="@dimen/dimen_20"
            tools:text="eeeeeeeeee" />
    </FrameLayout>

</LinearLayout>