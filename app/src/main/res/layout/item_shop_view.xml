<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen_8"
    android:background="@drawable/ll_bg_white_gray5"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dimen_8"
    android:paddingTop="@dimen/dimen_10">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_15">

        <ImageView
            android:id="@+id/ivShoplogo"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_default"
            android:minWidth="@dimen/dimen_80"
            android:scaleType="centerCrop" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_weight="1.0"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvShopName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="门店名称"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_15" />

            <TextView
                android:id="@+id/tvShopDistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_weight="1.0"
                android:gravity="center_vertical|right"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/dimen_14"
                tools:text="12.9km" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvShopDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dimen_5"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dimen_14"
            tools:text="eeeeeeee" />

        <TextView
            android:id="@+id/tvGothere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dimen_5"
            android:background="@drawable/bg_fill_fbe0e2"
            android:paddingBottom="@dimen/dimen_3"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:paddingTop="@dimen/dimen_3"
            android:text="@string/tothere"
            android:textColor="@color/color_ee2e3b"
            android:textSize="@dimen/dimen_14" />

    </LinearLayout>

</LinearLayout>