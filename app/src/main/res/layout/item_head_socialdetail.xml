<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:layout_marginTop="@dimen/dimen_15"
        android:orientation="horizontal">

        <com.kasao.qintai.widget.CircleImageView
            android:id="@+id/iv_touxiang"
            android:layout_width="@dimen/dimen_42"
            android:layout_height="@dimen/dimen_42"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dimen_8"
            android:src="@drawable/bg_default" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_13"
            tools:text="1512***003" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0"
            android:gravity="center_vertical|right"
            android:includeFontPadding="false"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/text_11"
            tools:text="昨天 21:17" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_titletalk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_15"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15"
        android:includeFontPadding="false"
        android:textColor="@color/color_text_02"
        android:textSize="@dimen/text_13"
        tools:text="sssssssss" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_gride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_15"
        android:layout_marginRight="@dimen/dimen_15" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dimen_20"
        android:layout_marginTop="@dimen/dimen_10"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_pinglun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dimen_15"
                android:text="@string/comment"
                android:textColor="@color/color_363636"
                android:textSize="@dimen/dimen_15" />

            <TextView
                android:id="@+id/tv_pinglunnumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_7"
                android:gravity="center_vertical"
                android:text="1"
                android:textColor="@color/color_363636"
                android:textSize="@dimen/dimen_15" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_zan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimen_15"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/clickzan"
                android:textColor="@color/color_cc363636"
                android:textSize="@dimen/dimen_12" />

            <TextView
                android:id="@+id/tv_zannumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dimen_7"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:textColor="@color/color_cc363636"
                android:textSize="@dimen/text_12"
                tools:text="1" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_liulan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="@dimen/dimen_10"
                android:text="@string/liulan"
                android:textColor="@color/color_cc363636"
                android:textSize="@dimen/text_12" />


            <FrameLayout
                android:id="@+id/viewConter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right">

                <FrameLayout
                    android:layout_width="@dimen/dimen_33"
                    android:layout_height="@dimen/dimen_33"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_circle_white">

                    <com.kasao.qintai.widget.CircleImageView
                        android:id="@+id/avater"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_gravity="center"
                        android:gravity="center" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/dimen_33"
                    android:layout_height="@dimen/dimen_33"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_15"
                    android:background="@drawable/bg_circle_white">

                    <TextView
                        android:id="@+id/lookcount"
                        android:layout_width="@dimen/dimen_30"
                        android:layout_height="@dimen/dimen_30"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_circle_black"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_12"
                        tools:text="15" />
                </FrameLayout>
            </FrameLayout>

        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_10"
        android:background="@color/color_f7f7f7" />
</LinearLayout>