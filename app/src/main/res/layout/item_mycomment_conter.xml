<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_10"
    android:layout_marginTop="@dimen/dimen_10"
    android:background="@drawable/ll_bg_white_gray5"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingRight="@dimen/dimen_15">

    <LinearLayout
        android:layout_width="@dimen/dimen_50"
        android:layout_height="@dimen/dimen_60"
        android:paddingLeft="@dimen/dimen_5"
        android:paddingRight="@dimen/dimen_15"
        android:background="@color/color_f6f6f6"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen_5">

        <TextView
            android:id="@+id/tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/text_15"
            tools:text="今天" />

        <TextView
            android:id="@+id/tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/color_858383"
            android:textSize="@dimen/text_11"
            tools:text="2017" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llImage"
        android:layout_width="@dimen/dimen_60"
        android:layout_height="@dimen/dimen_60"
        android:layout_marginRight="@dimen/dimen_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:scaleType="fitXY"
            tools:background="@color/red" />

        <ImageView
            android:id="@+id/iv02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_1"
            android:layout_weight="1.0"
            android:scaleType="fitXY"
            tools:background="@color/bank_FF6C6C6C" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center_vertical"
        android:lineSpacingExtra="@dimen/dimen_2"
        android:maxLines="3"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_12"
        tools:text="ssssddddddddddddddddddds" />

</LinearLayout>