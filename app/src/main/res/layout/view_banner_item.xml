<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/banner_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="0dp">
    <ImageView
        android:id="@+id/banner_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_36"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/banner_item_desc"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dimen_33"
            android:textSize="@dimen/dimen_16"
            android:textColor="@color/white"
            android:singleLine="true"
            android:ellipsize="end"
            android:includeFontPadding="false"/>
        <TextView
            android:id="@+id/banner_item_title"
            android:layout_width="@dimen/dimen_138"
            android:layout_height="@dimen/dimen_78"
            android:layout_marginRight="@dimen/dimen_33"
            android:gravity="center"
            android:textSize="@dimen/dimen_14"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:ellipsize="end"/>
    </LinearLayout>
</FrameLayout>